<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @user do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :社員番号 %>
      <%= f.number_field :emp_no, class: 'form-control' %>

<%
=begin%>
        <%= f.label :join_date %><br>
          <%= f.date_select :join_date,
                             use_month_numbers: true,
                             start_year: 1930, 
                             end_year: (Time.now.year), 
                             default: Date.new(1989, 1, 1) %> --> 
<%
=end%>
       
      <%= f.label :入社年月日 %><br>
      <%= f.date_field :join_date %>

        
      <%= f.label :部署 %>
      <%= f.collection_select :busho_id, Busho.all, :id, :busho_name %>

      <%= f.label :役職 %>
      <%= f.collection_select :yakushoku_id, Yakushoku.all, :id, :yaku_name %>

      <%= f.label :所属委員会 %>
      <%= f.collection_select :committee_id, Committee.all, :id, :com_name %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "submit account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>